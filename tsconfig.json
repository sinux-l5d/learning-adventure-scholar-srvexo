{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": false,
    "outDir": "build",
    "rootDirs": ["src", "spec"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@app": ["src/app"],
      "@config": ["src/config"],
      "@type/*": ["src/type/*"],
      "@db/*": ["src/db/*"],
      "@repositories/*": ["src/repositories/*"],
      "@helpers/*": ["src/helpers/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": [],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "entryPointStrategy": "expand",
    "readme": "none",
    "out": "docs"
  }
}
